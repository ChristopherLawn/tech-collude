<article class="post">
  <div class="title">
 <h2>{{post.post_title}}</h2>
 <h3>by: {{post.user.username}} on {{format_date post.createdAt}}</h3>
    
  </div>
  <p class="body">{{post.post_body}}</p>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{format_date createdAt}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}